{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch server",
			"request": "launch",
			"runtimeArgs": ["run", "dev"],
			"runtimeExecutable": "npm",
			"skipFiles": ["<node_internals>/**"],
			"type": "node",
			"presentation": {
				"hidden": true
			}
		},
		{
			"type": "msedge",
			"name": "edge",
			"request": "launch",
			"runtimeArgs": ["--remote-debugging-port=9222"],
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}",
			"sourceMapPathOverrides": {
				"/app/*": "${workspaceFolder}/*"
			},
			"presentation": {
				"hidden": true
			}
		},
		{
			"name": "Launch Edge on Linux",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "open",
			"runtimeArgs": ["http://localhost:3000/"],
			"presentation": {
				"hidden": true
			}
		}
	],
	"compounds": [
		{
			"name": "Debug",
			"configurations": ["Launch server", "edge"]
		},
		{
			"name": "Run",
			"configurations": ["Launch server", "Launch Edge on Linux"]
		}
	]
}
